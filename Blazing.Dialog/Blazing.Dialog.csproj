<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RazorLangVersion>3.0</RazorLangVersion>
    <RootNamespace>Blazing.Dialog</RootNamespace>

    <Authors>Neville Nazerane</Authors>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>
      Provides awaitable dialogs using bootstrap modals
    </Description>
    <PackageProjectUrl>https://github.com/neville-nazerane/Blazing.Dialog</PackageProjectUrl>
    <PackageTags>bootstrap modal blazor dialog async await popup</PackageTags>
    <PackageVersion>1.0.0</PackageVersion>
    <PackageReleaseNotes>
      - Updated package meta
    </PackageReleaseNotes>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.0" />
  </ItemGroup>

</Project>
